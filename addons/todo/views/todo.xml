<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="todo_view_tree" model="ir.ui.view">
        <field name="name">todo.view.tree</field>
        <field name="model">to.do</field>
        <field name="arch" type="xml">
            <tree editable="bottom" >
                <field name="name" />
                <field name="complete" />
            </tree>
        </field>
    </record>

    <record id="todo_action" model="ir.actions.act_window">
        <field name="name">Todo Action</field>
        <field name="res_model">to.do</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="todo_root_menu"
        name="Todo"
        sequence="0" />
    <menuitem
        id="todo_sub_menu"
        name="Todo"
        action="todo_action"
        parent="todo_root_menu"
        sequence="0"/>

</odoo>
